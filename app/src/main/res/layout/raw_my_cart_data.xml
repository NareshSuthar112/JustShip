<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_8dp"
        android:layout_marginTop="@dimen/d_20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/product_card"
            style="@style/SelectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:transitionName="product_card"
            android:elevation="8dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:foregroundTint="@color/background"
            android:translationZ="5dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/cart_product_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/i1"
                android:transitionName="product_image" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/trade_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:text="Trade Name"
                        android:textColor="#000"
                        android:transitionName="trade_name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/technical_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:text="Technical Name"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_20dp"
                        android:text="Company Name"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:background="#fff"
                    android:src="@drawable/ic_baseline_delete_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/d_8dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_20dp"
                    android:text="QTY:"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:textColor="#BB7D26"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/product_qty"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_20dp"
                    android:text="10"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:textColor="#BB7D26"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_20dp"
                    android:text="Price:"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#66C792"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_20dp"
                    android:text="12000"
                    android:gravity="end"
                    android:layout_marginTop="10dp"
                    android:textColor="#66C792"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/d_8dp"
        android:layout_marginTop="@dimen/d_8dp"
        android:layout_marginBottom="10dp"
        android:background="#EDEDED" />

</LinearLayout>