<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/d_5dp"
            android:layout_marginVertical="@dimen/d_5dp"
            android:elevation="@dimen/d_8dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d_5dp">

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Details:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/d_18dp"/>

                <TextView
                    android:id="@+id/tvPaymentIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:text="Payment ID:"
                    android:layout_below="@+id/tvHeading"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:layout_toEndOf="@+id/tvPaymentIdLabel"
                    android:text="123456abcd"
                    android:layout_below="@+id/tvHeading"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvHeading"
                    android:layout_marginEnd="@dimen/d_5dp"
                    android:text="28-May-2021"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvRefLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPaymentIdLabel"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_5dp"
                    android:text="ReferenceNo:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPaymentIdLabel"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_5dp"
                    android:layout_toEndOf="@+id/tvRefLabel"
                    android:text="123456abcd"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvCouponLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRefLabel"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_5dp"
                    android:text="Coupon ID:"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvCouponID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRefLabel"
                    android:layout_marginStart="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_5dp"
                    android:layout_toEndOf="@+id/tvCouponLabel"
                    android:text="ABCD12"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/llRoot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCouponID"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Name:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="Emen Market"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Mode:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="Cheque"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coupon Discount:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="10.00"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Discount:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="100.00"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/d_5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="@dimen/d_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/d_18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/d_5dp"
                            android:minLines="1"
                            android:ellipsize="end"
                            android:text="market user subscription charges applys"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GST:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="100.00"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/d_5dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical"
                            android:padding="@dimen/d_5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MRP:"
                                android:textColor="@color/black"
                                android:textSize="@dimen/d_18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/d_5dp"
                                android:text="1000.00"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/d_20dp"
                    android:layout_marginHorizontal="@dimen/d_5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/llRoot"
                    android:layout_marginBottom="@dimen/d_5dp"
                    android:padding="@dimen/d_5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MRP:"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/d_18dp"
                        android:layout_marginEnd="@dimen/d_8dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d_8dp"
                        android:layout_gravity="center"
                        android:text="1000.00"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="@dimen/d_8dp"
                    android:layout_marginVertical="@dimen/d_8dp"
                    android:layout_below="@+id/ll2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>