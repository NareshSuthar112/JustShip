<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/d_8dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:layout_height="80dp"
                android:src="@drawable/i1"
                android:fitsSystemWindows="true"/>

<!--            <androidx.cardview.widget.CardView
                android:id="@+id/product_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                app:cardCornerRadius="8dp"
                android:translationZ="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:foregroundTint="@color/background"
                style="@style/SelectableItemBackground"
                android:focusable="true"
                android:elevation="8dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:padding="15dp"
                android:layout_height="80dp"
                android:src="@drawable/i1"
                android:fitsSystemWindows="true"/>
            </androidx.cardview.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d_8dp"
                android:layout_marginTop="@dimen/d_8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/trade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade Name"
                    android:singleLine="false"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/technical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technical Name"
                    android:singleLine="false"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/d_8dp"
                    android:textSize="15sp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="@dimen/d_8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/d_0dp"
                android:layout_height="@dimen/d_1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000" />

            <TextView
                android:layout_width="@dimen/d_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Available Packings"
                android:textColor="#000"
                android:textSize="12sp" />

            <View
                android:layout_width="@dimen/d_0dp"
                android:layout_height="@dimen/d_1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#000" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Packing"
                android:singleLine="false"
                android:textColor="#000"
                android:gravity="end"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Box Size"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty(Box)"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty(Ltr)"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:singleLine="false"
                android:gravity="end"
                android:layout_marginEnd="-3dp"
                android:textColor="#66C792"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="right"
                android:layout_marginTop="@dimen/d_8dp"
                android:text="(â‚¹)"
                android:textColor="#66C792"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/packing"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Packing"
                android:singleLine="false"
                android:textColor="#000"
                android:gravity="end"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/box_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Box Size"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/qty_box"
                android:layout_weight=".6"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:maxLength="3"
                android:layout_gravity="center_vertical"
                android:inputType="number"
                android:textSize="10sp"
                android:background="@drawable/edittext_curve_bg"/>

            <TextView
                android:id="@+id/qty_ltr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Qty(Ltr)"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/total_amt"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Total Amount"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#66C792"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="Price(Ltr)"
                android:singleLine="false"
                android:textColor="#66C792"
                android:gravity="end"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#FFCA83"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="right"
                android:layout_marginTop="@dimen/d_8dp"
                android:text="(â‚¹)"
                android:textColor="#FFCA83"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="Net Price"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:text="GST"
                android:singleLine="false"
                android:gravity="end"
                android:layout_marginEnd="-4dp"
                android:textColor="#BB7D26"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:gravity="right"
                android:layout_marginTop="@dimen/d_8dp"
                android:text="(%)"
                android:textColor="#BB7D26"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Total Amt(GST)"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#FF4646"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_ltr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Price(Ltr)"
                android:singleLine="false"
                android:textColor="#66C792"
                android:gravity="end"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/discount"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="Discount"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#FFCA83"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/net_price"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:text="Net Price"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#000"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/gst"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:text="GST"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#BB7D26"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/total_amount_gst"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Total Amount(GSt)"
                android:singleLine="false"
                android:gravity="end"
                android:textColor="#FF4646"
                android:layout_marginTop="@dimen/d_8dp"
                android:textSize="12sp"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/d_8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EDEDED" />

    </LinearLayout>

</LinearLayout>